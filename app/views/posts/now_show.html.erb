<br><br><br>

<div class="container">
	<h2><%= @posts.title %></h2>
	<p><%= @posts.content %></p>
	<br>
	<% if session[:user_id] == @posts.user_id %>
		<a href="/posts/now_post_edit/<%= @posts.id %>">수정</a> 
		<a href="/posts/now_post_delete/<%= @posts.id %>">삭제</a><br>
	<% end %>
	<hr>
	<% if !session[:user_id].nil? %>
		<form action="/posts/now_comment_complete" method="POST">
			<p>
				<strong><%= @comment_writer.nickname %> </strong>
				<input type="hidden" name="post_id" value="<%= @posts.id %>">
				<input type="text" name="comment" placeholder="댓글을 입력하세요">		
				<input type="submit" value="달기">
			</p>
		</form>
	<% end %>
	<% if !@comments.nil? %>
		<% @comments.each do |comment| %>
			<p>
				<strong><%= comment.user.nickname %></strong>
				<%= comment.content %>
			</p>
		<% end %>
	<% end %>
</div>
